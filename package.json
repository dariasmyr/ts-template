{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run prepare",
    "start:dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "start:prod": "node --enable-source-maps dist/src/app.js",
    "build": "tsc",
    "prebuild": "npx rimraf dist",
    "ts:check": "tsc --noEmit",
    "check": "npm run ts:check && npm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --setupFiles dotenv/config",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepare": "husky install",
    "update": "npx npm-check-updates -u && npx rimraf node_modules package-lock.json && npm i --legacy-peer-deps"
  },
  "author": "daria_smyr",
  "license": "MIT",
  "devDependencies": {
    "@jetbrains/eslint-config": "^5.4.1",
    "@types/compression": "^1.7.2",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^38.0.0",
    "eslint-plugin-comments": "^1.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.20.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "husky": "^8.0.3",
    "jest": "^29.6.3",
    "nodemon": "^3.0.1",
    "npm-check-updates": "^16.12.2",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
